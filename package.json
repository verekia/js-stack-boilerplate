{
  "name": "js-stack-from-scratch",
  "version": "2.0.0",
  "description": "JavaScript Stack from Scratch - Step-by-step tutorial to build a modern JavaScript stack",
  "scripts": {
    "start": "yarn dev",
    "dev": "yarn stop && pm2 start pm2-dev.yaml && webpack-dev-server",
    "prod": "yarn stop && yarn build && pm2 start pm2-prod.yaml",
    "build": "rimraf dist lib && set NODE_ENV=production&& webpack -p && babel src/server -d lib/server && babel src/shared -d lib/shared",
    "stop": "rimraf logs/* && pm2 delete all || true",
    "lint": "eslint src webpack.config.babel.js --ext .js,.jsx",
    "test": "yarn lint && flow && yarn mocha",
    "mocha": "mocha src/**/*.test.js --compilers js:babel-register",
    "full-check": "yarn test && yarn prod && yarn stop",
    "precommit": "yarn full-check",
    "prepush": "yarn full-check"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "express": "^4.14.1",
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.1",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-flow": "^1.0.0",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "chai": "^3.5.0",
    "eslint": "^3.13.0",
    "eslint-config-airbnb": "latest",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "fetch-mock": "^5.9.3",
    "flow-bin": "^0.38.0",
    "husky": "^0.13.1",
    "mocha": "^3.2.0",
    "pm2": "^2.3.0",
    "rimraf": "^2.5.4",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.2.1"
  },
  "repository": "verekia/js-stack-from-scratch",
  "author": "Jonathan Verrecchia - @verekia",
  "license": "MIT"
}
